<div class="card">
    <img class="card__image" src="https://www.cesvi.eu/wp-content/uploads/2016/07/Lotta-alla-malnutrizione.jpg" alt="">
    <div class="circle-container">
        <canvas id="circle" width="100" height="100"></canvas>
        <span id="percentage">10%</span>
    </div>
    <div class="card__content">
        <h1>{{card.name}}</h1>
        <p class="card-text">
            {{card.details}}
        </p>
        <div class="amount">
            <ul class="cal">
                <li>Raised:₹ <span id="get">{{card.fund}}</span></li>
                <li>Goal:₹ <span id="set">{{card.goal}}</span></li>
            </ul>
        </div>
    </div>
    <div class="card__button">
        <button class="btn">support us</button>
    </div>
</div>